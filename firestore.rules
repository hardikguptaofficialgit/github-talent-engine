rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Public collections — read-only for everyone
    match /public/{documentId} {
      allow read: if true;
      allow write: if false;
    }

    match /jobs/{jobId} {
      allow read: if true;
      allow write: if false;
    }

    // User profile — owner can read/write freely (sync writes partial fields via merge)
    match /users/{userId}/profile/{docId} {
      allow read: if isOwner(userId);
      allow create, update, delete: if isOwner(userId);
    }

    // User dashboard — owner full access
    match /users/{userId}/dashboard/{docId} {
      allow read, write: if isOwner(userId);
    }

    // User github metadata — owner full access
    match /users/{userId}/github/{docId} {
      allow read, write: if isOwner(userId);
    }

    // User applications — owner full access
    match /users/{userId}/applications/{docId} {
      allow read, write: if isOwner(userId);
    }

    // Any other user sub-collections — owner full access
    match /users/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }

    // Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
