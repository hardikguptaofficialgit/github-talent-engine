rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isValidProfileWrite() {
      return request.resource.data.name is string
        && request.resource.data.headline is string
        && request.resource.data.bio is string
        && request.resource.data.links is list
        && request.resource.data.links.size() <= 6;
    }

    match /public/{documentId} {
      allow read: if true;
      allow write: if false;
    }

    match /jobs/{jobId} {
      allow read: if true;
      allow write: if false;
    }

    match /users/{userId}/profile/{docId} {
      allow read: if isOwner(userId);
      allow create, update: if isOwner(userId) && isValidProfileWrite();
      allow delete: if false;
    }

    match /users/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
